<%= simple_form_for(@post) do |f|%>
  <%= f.error_notification%>
  <div class="field">
    <div class="control">
      <%= f.input :content, label: "What is happening?", input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Write about it" %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info"%>
<% end %>